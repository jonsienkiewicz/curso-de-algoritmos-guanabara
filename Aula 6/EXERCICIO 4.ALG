Algoritmo "Exercicio 4"
// cálculo de porcentagens
Var

   taxa: Real
   produto: Real
   valorFinal: Real
Inicio
   taxa <- 100/60
   Escreva("Qual o valor do produto? ")
   leia(produto)
   valorFinal <- produto+(produto*taxa)
   Escreva("O valor final, já com as taxas é: ",valorFinal:4:2," reais.")

Fimalgoritmo